{
    "env": {
      "browser": true,
      "es6": true,
      "node": true,
      "jest": true
    },
    "extends": "eslint:recommended",
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaFeatures": {
        "experimentalObjectRestSpread": true,
        "jsx": true,
        "modules": true
      },
      "sourceType": "module"
    },
    "plugins": ["react"],
    "rules": {
      "comma-dangle": ["error", "always-multiline"],
      "indent": ["error", 2],
      "no-console": "off",
      "linebreak-style": ["error", "unix"],
      "quotes": ["error", "single"],
      "semi": ["error", "always"],
      "react/jsx-uses-react": 2,
      "react/jsx-uses-vars": 2
    }
  }